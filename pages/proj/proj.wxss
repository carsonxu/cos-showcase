/* pages/proj/proj.wxss */

page {
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.center_item {
  align-content: center;
  text-align: center;
}

.header {
  margin: 100rpx 0 80rpx 0;
  font-size:1.3rem;
  font-weight: 500;
  color: #001970;
}

.divider_container {
  display: flex;
  justify-content: center;
  margin: 80rpx 0 40rpx 0;
  height: 50rpx;
}

.line{
  width: 240rpx;
  height: 26rpx;
  margin: 0 20rpx 0 20rpx;
  border-bottom: 1rpx solid #bdbdbd;
  display: inline-block;
}

.text_or {
  font-size:1.2rem;
  font-weight: 600;
}

.qr {
  width: 500rpx;
  height: 500rpx;
}

.copy_tip {
  margin-top: 60rpx;
  font-size: 1.2rem;
}

.text_link {
  margin-top: 40rpx;
  color: #1565c0;
  padding: 0 40rpx 0 40rpx;
  font-size: 1.1rem;
}

.bottom {
  height: 80rpx;
}